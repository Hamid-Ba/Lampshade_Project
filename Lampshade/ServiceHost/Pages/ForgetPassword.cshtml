@page
@model ServiceHost.Pages.ForgetPasswordModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">فراموشی رمز عبور</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="Index">صفحه اصلی</a></li>
                            <li class="active">فراموشی رمز عبور</li>
                        </ul>
                        @if (!string.IsNullOrWhiteSpace(ViewData["Message"] as string))
                        {
                            <div class="alert alert-@Model.MessageColor alert-dismissible fade show" style="text-align: center; width: 35%;margin: auto">
                                <span> @ViewData["Message"] </span>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-12">
                                <form asp-page-handler="ForgetPassword" method="post">
                                    <div class="login-form">
                                        <h4 class="login-title">فراموش کردم رمزم را</h4>
                                        <div class="row">

                                            <div class="col-md-12 col-12">
                                                <label>نام کاربری*</label>
                                                <input asp-for="UserPasswordVM.Username" name="userName" type="text" placeholder="نام کاربری">
                                                <span class="text-danger" asp-validation-for="UserPasswordVM.Username"></span>
                                            </div>
                                            <div class="col-md-12 col-12">
                                                <label>پست الکترونیک*</label>
                                                <input asp-for="UserPasswordVM.Email" name="email" type="email" placeholder="ایمیل">
                                                <span class="text-danger" asp-validation-for="UserPasswordVM.Email"></span>
                                            </div>

                                            <div class="col-md-12">
                                                <button type="submit" class="register-button">بعد</button>
                                            </div>

                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

