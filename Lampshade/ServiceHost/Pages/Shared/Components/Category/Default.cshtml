@model IEnumerable<LampshadeQuery.Contract.Category.CategoryQueryVM>

    <cache expires-after="TimeSpan.FromMinutes(15)">
        <div class="category-area section-space">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <!--=======  category wrapper  =======-->
                        <div class="category-wrapper">
                            <div class="row row-10 masonry-category-layout">
                                @foreach (var category in Model)
                                {
                                    <div class="col-lg-4 col-sm-6 grid-item">
                                        <!--=======  single category item  =======-->
                                        <div class="single-category-item">
                                            <div class="single-category-item__image">
                                                <a asp-page="/ProductCategory">
                                                    <img src="~/Pictures/@category.Picture" class="img-fluid" alt="@category.PictureAlt" title="@category.PictureTitle">
                                                </a>
                                            </div>
                                            <div class="single-category-item__content">
                                                <h3 class="title">@category.Name</h3>
                                                <a href="/Category/@category.Slug">
                                                    <i class="ion-android-arrow-dropleft-circle"></i> الان خرید کن
                                                </a>
                                            </div>
                                        </div>
                                        <!--=======  End of single category item  =======-->
                                    </div>
                                }


                            </div>
                        </div>
                        <!--=======  End of category wrapper  =======-->
                    </div>
                </div>
            </div>
        </div>
    </cache>