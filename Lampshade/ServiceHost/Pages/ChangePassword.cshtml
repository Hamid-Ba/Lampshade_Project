@page "{id}"
@model ServiceHost.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">فراموشی رمز عبور</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="Index">صفحه اصلی</a></li>
                            <li class="active">فراموشی رمز عبور</li>
                        </ul>
                        @if (!string.IsNullOrWhiteSpace(ViewData["Message"] as string))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" style="text-align: center; width: 35%;margin: auto">
                                <span> @ViewData["Message"] </span>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-12">
                                <form asp-page-handler="ChangePassword" method="post">
                                    <div class="login-form">
                                        <h4 class="login-title">فراموش کردم رمزم را</h4>
                                        <div class="row">

                                            <div class="col-md-12 col-12">
                                                <label>رمز عبور جدید*</label>
                                                <input asp-for="UserPasswordVM.NewPassword" type="text" placeholder="رمز جدید">
                                                <span class="text-danger" asp-validation-for="UserPasswordVM.NewPassword"></span>
                                            </div>
                                            <div class="col-md-12 col-12">
                                                <label>تکرار رمز جدید*</label>
                                                <input asp-for="UserPasswordVM.RePassword" type="text" placeholder="تکرار رمز جدید">
                                                <span class="text-danger" asp-validation-for="UserPasswordVM.RePassword"></span>
                                            </div>

                                            <div class="col-md-12">
                                                <input type="hidden" asp-for="UserPasswordVM.Id" />
                                                <button type="submit" class="register-button">تغییر رمز عبور</button>
                                            </div>

                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

