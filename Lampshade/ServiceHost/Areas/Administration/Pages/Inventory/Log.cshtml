@model IEnumerable<InventoryManagement.Application.Contract.InventoryAgg.InventoryOperationsVM>

@{
    ViewData["Title"] = "گردش حساب";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">سوابق گردش انبار</h4>
</div>

<div class="modal-body">
    <table class="table table-bordered">
        <thead>
        <tr>
        <th>#</th>
        <th>تعداد</th>
        <th>تاریخ</th>
        <th>عملیات</th>
        <th>موجودی فعلی</th>
        <th>عملگر</th>
        <th>توضیحات</th>
        </thead>
        <tbody>
        @foreach (var op in Model)
        {
            <tr class="text-white @(op.Operation ? "bg-success" : "bg-danger")">
                <td>@op.Id</td>
                <td>@op.Count</td>
                <td>@op.OperationDate</td>
                <td>
                    @if (op.Operation)
                    {
                        <span>افزایش</span>
                    }
                    else
                    {
                        <span>کاهش</span>
                    }
                </td>
                <td>@op.CurrentCount</td>
                <td>@op.OperatorName</td>
                <td>@op.Description</td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss ="modal">بستن</button>
</div>