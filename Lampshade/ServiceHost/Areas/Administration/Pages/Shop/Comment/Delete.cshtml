@model ShopManagement.Application.Contracts.CommentAgg.DeleteCommentVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">حذف نظر @Model.Name</h4>
</div>

<form asp-page="./Index" asp-page-handler="Delete"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <h5 style="font-style: oblique">آیا از حذف نظر کاربر @Model.Name برای محصول @Model.ProductName مطمئن هستید؟</h5>
    </div>
    <div class="modal-footer">
        <input asp-for="Id" type="hidden"/>
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">خیر</button>
        <button type="submit" class="btn btn-danger waves-effect waves-light">بله</button>
    </div>
</form>